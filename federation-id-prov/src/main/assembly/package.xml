<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>package</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/usr/share/contrail/federation-id-prov</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/var/lib/tomcat6/webapps</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/site</directory>
            <outputDirectory>/usr/share/contrail/federation-id-prov/docs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/config</directory>
            <outputDirectory>/etc/contrail/federation-id-prov/</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/simplesamlphp-1.9</directory>
            <outputDirectory>/usr/share/contrail/federation-id-prov/simplesamlphp-1.9</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
