<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                                http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID"
         version="2.5">
    <display-name>Federation-API</display-name>
    <listener>
        <listener-class>org.ow2.contrail.federation.federationapi.MyServletContextListener</listener-class>
    </listener>
    <context-param>
        <param-name>properties-file</param-name>
        <param-value>/etc/contrail/federation-api/federation-api.cfg</param-value>
    </context-param>
    <context-param>
        <param-name>app-data-root</param-name>
        <param-value>/etc/contrail/federation-api</param-value>
    </context-param>

    <!-- Load Spring context file -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/federation-api-context.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Jersey REST Services</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>org.ow2.contrail.federation.federationapi.resources</param-value>
        </init-param>
        <init-param>
            <param-name>properties-file</param-name>
            <param-value>/etc/contrail/federation-api/federation-api.conf</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey REST Services</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <!--<filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>org.ow2.contrail.federation.federationapi.authorization.AuthFilter</filter-class>
        <init-param>
            <param-name>test-mode</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <servlet-name>Jersey REST Services</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>-->

    <filter>
        <filter-name>OAuthFilter</filter-name>
        <filter-class>org.ow2.contrail.common.oauth.client.OAuthFilter</filter-class>
        <init-param>
            <param-name>configuration-file</param-name>
            <param-value>/etc/contrail/federation-api/federation-api.cfg</param-value>
        </init-param>
        <init-param>
            <param-name>test-mode</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>OAuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <description>Auditing</description>
        <filter-name>Auditing</filter-name>
        <filter-class>org.ow2.contrail.resource.auditing.WebAppAuditingFilter</filter-class>
        <init-param>
            <param-name>configuration-file</param-name>
            <param-value>/etc/contrail/federation-api/federation-api.cfg</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Auditing</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>REST services</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>