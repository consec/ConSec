<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="mainPU">
        <class>org.consec.federationdb.model.Attribute</class>
        <class>org.consec.federationdb.model.Group</class>
        <class>org.consec.federationdb.model.IdentityProvider</class>
        <class>org.consec.federationdb.model.Role</class>
        <class>org.consec.federationdb.model.User</class>
        <class>org.consec.federationdb.model.UserHasAttribute</class>
        <class>org.consec.federationdb.model.UserHasIdentityProvider</class>
        <properties>
            <property name="eclipselink.target-database" value="MySQL"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/consec"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="consec"/>
            <property name="eclipselink.jdbc.password" value="consec"/>
        </properties>
    </persistence-unit>
</persistence>
